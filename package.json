{
    "name": "mcp-server",
    "version": "1.0.0",
    "description": "MCP Server",
    "type": "module",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "dev": "npx -y tsx src/main.ts",
        "build": "npx tsc",
        "start": "node dist/main.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:live": "jest tests/integration/live-server.test.ts"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "extensionsToTreatAsEsm": [".ts"],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1",
            "^uuid$": "<rootDir>/tests/__mocks__/uuid.js"
        },
        "transform": {
            "^.+\\.ts$": ["ts-jest", {
                "useESM": true
            }]
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(uuid|@types/uuid)/)"
        ],
        "testMatch": [
            "**/tests/**/*.test.ts",
            "**/tests/**/*.spec.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/main.ts"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.ts"
        ],
        "testTimeout": 10000,
        "verbose": true,
        "forceExit": true,
        "detectOpenHandles": true
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.18.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.21.2",
        "ioredis": "^5.8.0",
        "openai": "^6.1.0",
        "redis": "^5.8.3",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@apify/tsconfig": "^0.1.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^10.0.0",
        "i": "^0.3.7",
        "jest": "^29.7.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.4",
        "tslib": "^2.8.1",
        "tsx": "^4.7.1",
        "typescript": "^5.3.3"
    },
    "author": "It is not me, it is you",
    "license": "MIT"
}
