{
  "name": "mcp-todo-server",
  "version": "1.0.0",
  "description": "Unified MCP Todo Server with Web UI - Easy task management for Cursor IDE",
  "type": "module",
  "main": "dist/todo-server.js",
  "bin": {
    "mcp-todo-server": "./bin/mcp-todo-server.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/todo-server.js",
    "dev": "npx tsx src/todo-server.ts",
    "mcp": "node dist/todo-server.js --stdio",
    "install-cursor": "node scripts/install-cursor.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "mcp",
    "todo",
    "task-management",
    "cursor",
    "ide",
    "productivity",
    "ai"
  ],
  "author": "MCP Todo Server Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist/",
    "bin/",
    "scripts/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mcp-todo-server.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/mcp-todo-server/issues"
  },
  "homepage": "https://github.com/your-username/mcp-todo-server#readme"
}
